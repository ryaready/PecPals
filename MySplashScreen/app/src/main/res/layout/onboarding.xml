<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/onboarding_creature_with_background" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/dark_pink"
        android:gravity="center_horizontal"
        android:text="PecPals"
        android:textColor="@color/dark_pink"
        android:textSize="34sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:gravity="center_horizontal"
        android:text="Weâ€™re so excited to see you here! Start your journey to fitness with us."
        android:textColor="@color/black" />

    <Button
        android:id="@+id/onboard_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/dark_pink"
        android:elegantTextHeight="true"
        android:text="LOGIN"
        android:textSize="20sp"
        app:cornerRadius="15dp"
        app:rippleColor="@color/dark_pink" />

    <TextView
        android:id="@+id/onboard_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="SIGN UP"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="normal" />

</LinearLayout>