<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/profilepic" />

        <TextView
            android:id="@+id/mainprofileusername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textStyle="bold"
            android:textSize="24sp"
            android:text="TextView"
            android:textColor="#FE5196"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="8dp">

                        <ImageView
                            android:id="@+id/card_icon"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/background_rect" />

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintBottom_toBottomOf="@+id/card_icon"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.494"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.273"
                            app:srcCompat="@drawable/card" />

                        <TextView
                            android:id="@+id/useridprofile_placeholder"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="User ID"
                            android:textStyle="bold"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            app:layout_constraintTop_toBottomOf="@+id/imageView2"
                            tools:layout_editor_absoluteX="8dp" />

                        <TextView
                            android:id="@+id/username_profile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:text="TextView"
                            android:gravity="center_horizontal"

                            app:layout_constraintEnd_toEndOf="@+id/useridprofile_placeholder"
                            app:layout_constraintStart_toStartOf="@+id/useridprofile_placeholder"
                            app:layout_constraintTop_toBottomOf="@+id/useridprofile_placeholder" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="8dp">

                        <ImageView
                            android:id="@+id/card_bg2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/background_rect" />

                        <ImageView
                            android:id="@+id/profile_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintBottom_toBottomOf="@+id/card_bg2"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.494"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.273"
                            app:srcCompat="@drawable/profileimage" />

                        <TextView
                            android:id="@+id/profile_placeholder"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="Profile"
                            android:textStyle="bold"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            app:layout_constraintTop_toBottomOf="@+id/profile_icon"
                            tools:layout_editor_absoluteX="8dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:text="TextView"
                            android:gravity="center_horizontal"

                            app:layout_constraintEnd_toEndOf="@+id/profile_placeholder"
                            app:layout_constraintStart_toStartOf="@+id/profile_placeholder"
                            app:layout_constraintTop_toBottomOf="@+id/profile_placeholder" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@+id/usernameTextView"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                    android:layout_height="wrap_content">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="8dp">

                        <ImageView
                            android:id="@+id/card_bg3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/background_rect" />

                        <ImageView
                            android:id="@+id/coin_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintBottom_toBottomOf="@+id/card_bg3"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.494"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.273"
                            app:srcCompat="@drawable/coin" />

                        <TextView
                            android:id="@+id/coins_placeholder"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="Coins"
                            android:textStyle="bold"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            app:layout_constraintTop_toBottomOf="@+id/coin_icon"
                            tools:layout_editor_absoluteX="8dp" />

                        <TextView
                            android:id="@+id/coin_balance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:text="TextView"
                            android:gravity="center_horizontal"

                            app:layout_constraintEnd_toEndOf="@+id/coins_placeholder"
                            app:layout_constraintStart_toStartOf="@+id/coins_placeholder"
                            app:layout_constraintTop_toBottomOf="@+id/coins_placeholder" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@+id/coinTextView" />
                    android:layout_height="wrap_content">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="8dp">

                        <ImageView
                            android:id="@+id/card_bg4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/background_rect" />

                        <ImageView
                            android:id="@+id/xp_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintBottom_toBottomOf="@+id/card_bg4"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.494"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.273"
                            app:srcCompat="@drawable/star" />

                        <TextView
                            android:id="@+id/xp_placeholder"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="XP"
                            android:textStyle="bold"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            app:layout_constraintTop_toBottomOf="@+id/xp_icon"
                            tools:layout_editor_absoluteX="8dp" />

                        <TextView
                            android:id="@+id/current_xp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:text="TextView"
                            android:gravity="center_horizontal"

                            app:layout_constraintEnd_toEndOf="@+id/xp_placeholder"
                            app:layout_constraintStart_toStartOf="@+id/xp_placeholder"
                            app:layout_constraintTop_toBottomOf="@+id/xp_placeholder" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="8dp">

                        <ImageView
                            android:id="@+id/card_bg_5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/background_rect" />

                        <ImageView
                            android:id="@+id/streak_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintBottom_toBottomOf="@+id/card_bg_5"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.494"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.273"
                            app:srcCompat="@drawable/fire" />

                        <TextView
                            android:id="@+id/streakprofile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="Streak"
                            android:textStyle="bold"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            app:layout_constraintTop_toBottomOf="@+id/streak_icon"
                            tools:layout_editor_absoluteX="8dp" />

                        <TextView
                            android:id="@+id/current_streak"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:text="TextView"
                            android:gravity="center_horizontal"

                            app:layout_constraintEnd_toEndOf="@+id/streakprofile"
                            app:layout_constraintStart_toStartOf="@+id/streakprofile"
                            app:layout_constraintTop_toBottomOf="@+id/streakprofile" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="8dp">

                        <ImageButton
                            android:id="@+id/logoutButton"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/background_rect"
                            android:background="@null"/>

                        <ImageView
                            android:id="@+id/logout_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintBottom_toBottomOf="@+id/logoutButton"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.494"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.273"
                            app:srcCompat="@drawable/logout"/>

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="Logout"
                            android:textStyle="bold"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            app:layout_constraintTop_toBottomOf="@+id/logout_icon"
                            tools:layout_editor_absoluteX="8dp" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

            </TableRow>
        </TableLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>